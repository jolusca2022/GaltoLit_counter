public class GalToLitTable {

	public static void main(String[] args) {
		double gallons, liters;
		int counter;
		counter = 0;
		for(gallons = 1; gallons <= 100; gallons++) {
		liters = gallons * 3.7854; // converte para litros
		System.out.println(gallons + " galões são " +
		liters + " litros.");
		counter++;
		// a cada 10 linhas deixar uma em branco
		if(counter == 10) {
		System.out.println();
		counter = 0; // Redefine o contador de linhas
		}
		}
		}

	}
